@model Xamine.Models.ManagerModel

@{
    Layout = "../Shared/_ManagerLayout.cshtml";
    ViewBag.Title = "Dashboard";
}

@*Project Slider*@
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div id="imageCarousel" class="carousel slide" data-interval="2000"
                     data-ride="carousel" data-pause="hover" data-wrap="true">

                    <ol class="carousel-indicators">
                        <li data-target="#imageCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#imageCarousel" data-slide-to="1"></li>
                        <li data-target="#imageCarousel" data-slide-to="2"></li>
                        <li data-target="#imageCarousel" data-slide-to="3"></li>
                    </ol>

                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/images/image2.jpg" alt="Image" class="img-responsive">
                            <div class="carousel-caption">
                                <h2 style="color:saddlebrown">Project 1</h2>
                                <p style="font-weight: bolder; color:brown;font-size:x-large">Project 1 Description</p>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
                                </div>
                            </div>
                            
                        </div>
                        <div class="item">
                            <img src="~/images/image3.jpeg" alt="Image" class="img-responsive">
                            <div class="carousel-caption">
                                <h2 style="color:saddlebrown">Project 2</h2>
                                <p style="font-weight: bolder; color:white;font-size:x-large">Project 2 Description</p>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-warning" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/image4.jpg" alt="Image" class="img-responsive">
                            <div class="carousel-caption">
                                <h2 style="color:saddlebrown">Project 3</h2>
                                <p style="font-weight: bolder; color:firebrick;font-size:x-large">Project 3 Description</p>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-info" role="progressbar" style="width:75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
                                </div>
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/image5.jpg" alt="Image" class="img-responsive">
                            <div class="carousel-caption">
                                <h2 style="color:saddlebrown">Project 4</h2>
                                <p style="font-weight: bolder; color:white;font-size:x-large">Project 4 Description</p>
                                <div class="progress">
                                    <div class="progress-bar progress-bar-danger" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <a href="#imageCarousel" class="carousel-control left" data-slide="prev">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                    </a>
                    <a href="#imageCarousel" class="carousel-control right" data-slide="next">
                        <span class="glyphicon glyphicon-arrow-right"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>

