@model Xamine.ViewModels.ReporteeViewModel

@{
    Layout = "../Shared/_ReporteeLayout.cshtml";
    ViewBag.Title = "Dashboard";
}


<div class="container-fluid">
    <center> <h2>Dashboard</h2> </center>

    @*Form for submitting the request to add new manager*@
    @using (Html.BeginForm("UpdateDailyProgress", "Reportee", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <hr />
        <div class="form-horizontal">
            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@

            <div class="form-group">
                @Html.LabelFor(model => model.ProjectModel.Name, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.ProjectModel.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TaskAssigned, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.TaskAssigned, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TaskPriority, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.TaskPriority, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HoursAssigned, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.HoursAssigned, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HoursWorked, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.HoursWorked, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-5">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    @*Link to Admin Dashboard*@
    <div>
        @Html.ActionLink("Back to Dashboard", "AdminDashboard")
    </div>
</div>